<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/bfDropSurvivor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="drop survivor" />
    
    <TextView
        android:id="@+id/tfSurvivorsName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="NAME" />
    
     <TextView
        android:id="@+id/tfSkillMetab"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Met level" />
    
    <TextView
        android:id="@+id/tfSkillScavange"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="scavenge skill level" />

    <TextView
        android:id="@+id/tfSkillmobility"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="mobility Skill level" />
    
     <TextView
        android:id="@+id/tfSkillbuilding"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="buildind skill level" />

     <TextView
        android:id="@+id/tfCoordinate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Current location " />
     
     
     <Button
   	 		android:id="@+id/bfMove"
   	 		android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
	        android:text="move the survivor"
	        android:layout_weight="20" />
      <Button
   	 		android:id="@+id/bfManFarm"
   	 		android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
	        android:text="man the farm"
	        android:layout_weight="20" />
</LinearLayout>